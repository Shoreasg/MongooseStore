<!DOCTYPE html>
<html>

<head>
    <%- include ("partials/head") %>

</head>

<body>
    <div class="container">
        <div>
            <div style="float:left">
                <h1>Shop</h1>
            </div>
            <div style="float:right;text-align: right;">
                <h3><a href="/products/new">Add new Product</a></h3>
            </div>
        </div>
        <table class="u-full-width">


            <thead>
                <tr>
                    <th>Name</th>
                    <th>item</th>
                    <th>Stock</th>
                    <th>price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                <% for( let index=0; index < products.length; index++ ) { %>
                    <tr>
                        <td>
                            <%= products[index].name %>

                        </td>
                        <td> <a href="/products/<%=products[index]._id%>"><img src="<%=products[index].img%>"style="width:300px"></a>
                        </td>
                        <td>
                            <% if (products[index].qty<=0) { %>
                                Out of Stock
                                <% } else { %>
                                    <%= products[index].qty %>
                                        <% } %>
    
                        </td>
                        <td>
                            $<%= products[index].price %>
                        </td>
                        <td>
                            <% if (products[index].qty<=0) { %>
                                
                                    <input type="submit" value="Unavaliable" style="background-color: lightgray; color: black;" disabled/>

                            <% } else { %>
                             
                            <form action="/products/<%=products[index]._id%>?_method=PATCH" method="POST">
                                <input type="submit" value="BUY" style="background-color: green; color: black;" />
                            </form>
                            <% } %>
                        </td>
                    </tr>
                    <% } %>


            </tbody>
        </table>


    </div>

</body>

</html>