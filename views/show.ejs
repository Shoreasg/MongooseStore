<!DOCTYPE html>
<html>

<head>
    <%- include ("partials/head") %>
</head>

<body>
    <div class="container">
        <h1>Store</h1>
        <table class="u-full-width">
            <thead>
                <tr>
                    <th>Name</th>
                    <th>Item</th>
                    <th>Description</th>
                    <th>Stock</th>
                    <th>Price</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td>
                        <%= product.name %>
                    </td>
                    <td> <img src="<%= product.img %> " style="width:300px"></td>
                    <td>
                        <%= product.description %>
                    </td>

                    <td>
                        <% if (product.qty<=0) { %>
                            Out of Stock
                            <% } else { %>
                                <%= product.qty %>
                                    <% } %>

                    </td>

                    <td>
                        <%= product.price %>
                    </td>
                    <td>
                        <h6><a href="<%=product._id%>/edit">Edit</a></h6>
                        <form action='<%=product._id%>?_method=DELETE' method="POST">
                            <input type="submit" value="DELETE" style="background-color: red; color: black;"/>
                        </form>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
    <div class="container">
        <h6><a href="/products">Back</a></h6>
    </div>

</body>

</html>